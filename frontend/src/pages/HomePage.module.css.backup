/* HomePage.module.css */

.homePage {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* Banner superiore */
.banner {
  background-color: #ff7800;
  color: white;
  padding: 60px 20px;
  text-align: center;
  border: 3px solid black;
  margin-bottom: 40px;
}

.banner h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  font-weight: bold;
}

.banner p {
  font-size: 1.2rem;
  opacity: 0.95;
}

/* Sezione alloggi */
.alloggiSection {
  background-color: #a600ff;
  padding: 60px 20px;
  text-align: center;
  border: 3px solid black;
  margin: 0 auto 40px;
  max-width: 1200px;
}

.alloggiSection h2 {
  color: white;
  font-size: 2rem;
  margin-bottom: 40px;
}

.alloggiGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 40px;
  justify-items: center;
}

.alloggioLink {
  text-decoration: none;
  color: white;
  transition: transform 0.3s ease;
}

.alloggioLink:hover {
  transform: translateY(-5px);
}

.alloggioCard {
  text-align: center;
  cursor: pointer;
}

.imageContainer {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid white;
  margin: 0 auto 20px;
  background-color: white;
}

.alloggioImage {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.alloggioLink:hover .alloggioImage {
  transform: scale(1.1);
}

.alloggioCard h3 {
  font-size: 1.3rem;
  margin-top: 15px;
  color: white;
}

/* Zona disponibilit√† */
.disponibilitaSection {
  background-color: white;
  padding: 60px 20px;
  text-align: center;
  border: 3px solid black;
  margin: 0 auto 40px;
  max-width: 1200px;
}

.disponibilitaSection h2 {
  font-size: 2rem;
  margin-bottom: 30px;
  color: #333;
}

.searchContainer {
  max-width: 800px;
  margin: 0 auto;
}

.dateInputs {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 30px;
}

.inputGroup {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.inputGroup label {
  margin-bottom: 5px;
  font-weight: 600;
  color: #555;
}

.inputGroup input,
.inputGroup select {
  padding: 10px 15px;
  border: 2px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
  min-width: 180px;
}

.inputGroup input:focus,
.inputGroup select:focus {
  outline: none;
  border-color: #ff7800;
}

.searchButton {
  background-color: #ff7800;
  color: white;
  border: none;
  padding: 15px 40px;
  font-size: 1.1rem;
  font-weight: bold;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.searchButton:hover {
  background-color: #e66a00;
}

/* Sezione Info */
.infoSection {
  padding: 60px 20px;
  max-width: 1200px;
  margin: 0 auto 40px;
}

.infoGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
}

.prenotaCard,
.galleriaCard {
  background-color: white;
  padding: 40px;
  border: 3px solid black;
  text-align: center;
}

.prenotaCard h2,
.galleriaCard h2 {
  font-size: 1.8rem;
  margin-bottom: 20px;
  color: #333;
}

.prenotaCard p,
.galleriaCard p {
  color: #666;
  margin-bottom: 30px;
  line-height: 1.6;
}

.ctaButton {
  display: inline-block;
  background-color: #a600ff;
  color: white;
  padding: 12px 30px;
  text-decoration: none;
  border-radius: 5px;
  font-weight: bold;
  transition: background-color 0.3s ease;
}

.ctaButton:hover {
  background-color: #8400cc;
}

/* Sezione Mappa */
.mapSection {
  background-color: white;
  padding: 60px 20px;
  text-align: center;
  border: 3px solid black;
  margin: 0 auto 40px;
  max-width: 1200px;
}

.mapSection h2 {
  font-size: 2rem;
  margin-bottom: 30px;
  color: #333;
}

.mapPlaceholder {
  background-color: #f5f5f5;
  padding: 80px 20px;
  border: 2px dashed #ccc;
  border-radius: 10px;
}

.mapPlaceholder p {
  font-size: 1.2rem;
  color: #666;
  margin-bottom: 20px;
}

.mapLink {
  color: #ff7800;
  font-weight: bold;
  text-decoration: none;
}

.mapLink:hover {
  text-decoration: underline;
}

/* Footer */
.footer {
  background-color: white;
  border: 3px solid black;
  padding: 40px 20px 20px;
}

.footerContent {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 40px;
  margin-bottom: 30px;
}

.footerInfo h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
  color: #333;
}

.footerInfo p {
  color: #666;
}

.footerLinks {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.footerLinks a {
  color: #666;
  text-decoration: none;
  transition: color 0.3s ease;
}

.footerLinks a:hover {
  color: #ff7800;
}

.privacyLink {
  font-weight: 600;
  color: #333 !important;
}

.footerBottom {
  text-align: center;
  padding-top: 20px;
  border-top: 1px solid #eee;
  color: #999;
}

/* Responsive */
@media (max-width: 768px) {
  .banner h1 {
    font-size: 2rem;
  }
  
  .alloggiGrid {
    grid-template-columns: 1fr;
  }
  
  .dateInputs {
    flex-direction: column;
    align-items: center;
  }
  
  .footerContent {
    flex-direction: column;
    text-align: center;
  }
  
  .footerLinks {
    align-items: center;
  }
}