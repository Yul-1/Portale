# /Project/Portale/.env

# Docker Compose
COMPOSE_PROJECT_NAME=portale
ENVIRONMENT=development

# PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=portale_db
DB_USER=portale_user
DB_PASSWORD=portale_password
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD= # Lascia vuoto per lo sviluppo

# Django
DJANGO_SECRET_KEY=your-super-secret-key-for-development
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost

# React
NODE_ENV=development
REACT_APP_API_URL=https://localhost/api